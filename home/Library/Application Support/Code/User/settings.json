{
    "workbench.colorTheme": "Tomorrow Night Bright",
    "vscode-neovim.neovimExecutablePaths.darwin": "/usr/local/bin/nvim",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "editor.minimap.enabled": false,
    "breadcrumbs.enabled": false,
    "workbench.statusBar.visible": false,
    "workbench.activityBar.visible": false,
    "todohighlight.keywords": [
        "DEBUG",
        "REVIEW",
        {
            "text": "DEFER",
            "color": "#006600",
            "backgroundColor": "#00ff00",
            "overviewRulerColor": "grey"
        },
        {
            "text": "NOTE",
            "color": "#ff0000",
            "backgroundColor": "yellow",
            "overviewRulerColor": "grey"
        },
        {
            "text": "HACK",
            "color": "#000",
            "isWholeLine": false,
        },
        {
            "text": "TODO",
            "color": "red",
            //"border": "1px solid red",
            //"borderRadius": "2px", //NOTE: using borderRadius along with `border` or you will see nothing change
            "backgroundColor": "rgba(0,0,0,.2)",
            //other styling properties goes here ...
        }
    ],
    "todohighlight.include": [

        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.tsx",
        "**/*.html",
        "**/*.php",
        "**/*.css",
        "**/*.scss",
        "**/*.md"
    ],
    "highlight.regexFlags": "g",
    "highlight.maxMatches": 250, // Maximum number of matches to decorate per regex, in order not to crash the app with accidental cathastropic regexes
    "highlight.decorations": { "rangeBehavior": 1 },
    "highlight.regexes": {
        "(#[\\w]+)": [
            {
              "color": "#4495d4",
              "filterLanguageRegex": "markdown",
            },
          ],
          "(@\\w+)": [
            {
              "color": "#4de0ff",
              "filterLanguageRegex": "markdown",
            }
          ]
    },
    "window.zoomLevel": 1,
    "markdown.extension.tableFormatter.normalizeIndentation": true,
    "editor.tabSize": 2,
}
