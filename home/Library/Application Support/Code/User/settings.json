{
    "workbench.colorTheme": "Tomorrow Night Bright",
    "vscode-neovim.neovimExecutablePaths.darwin": "/usr/local/bin/nvim",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "editor.minimap.enabled": false,
    "breadcrumbs.enabled": false,
    "todohighlight.keywords": [
        "DEBUG",
        "REVIEW",
        {
            "text": "DEFER",
            "color": "#006600",
            "backgroundColor": "#00ff00",
            "overviewRulerColor": "grey"
        },
        {
            "text": "DONE",
            "color": "#008000",
            "backgroundColor": "rgba(0,0,0,.2)",
            "overviewRulerColor": "grey"
        },
        {
            "text": "NOTE",
            "color": "#ff0000",
            "backgroundColor": "yellow",
            "overviewRulerColor": "grey"
        },
        {
            "text": "HACK",
            "color": "#000",
            "isWholeLine": false
        },
        {
            "text": "TODO",
            "color": "red",
            //"border": "1px solid red",
            //"borderRadius": "2px", //NOTE: using borderRadius along with `border` or you will see nothing change
            "backgroundColor": "rgba(0,0,0,.2)",
            //other styling properties goes here ...
        }
    ],
    "todohighlight.include": [

        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.tsx",
        "**/*.html",
        "**/*.php",
        "**/*.css",
        "**/*.scss",
        "**/*.md"
    ],
    "highlight.regexFlags": "g",
    "highlight.maxMatches": 250, // Maximum number of matches to decorate per regex, in order not to crash the app with accidental cathastropic regexes
    "highlight.decorations": {


       "rangeBehavior": 1 },
    "highlight.regexes": {
        "(#[-:\\w]+)": [
            {
              "color": "#4495d4",
              "filterLanguageRegex": "markdown",
            },
          ],
          "(@[-:\\w]+)": [
            {
              "color": "#4de0ff",
              "filterLanguageRegex": "markdown",
            }
          ]
    },
    "markdown.extension.tableFormatter.normalizeIndentation": true,
    "editor.tabSize": 2,
    "window.zoomLevel": 1,
    "foam.decorations.links.enable": true,
    "foam.openDailyNote.filenameFormat": "isoDate",
    "foam.openDailyNote.directory": "journal", // a relative directory path will get appended to the workspace root. An absolute directory path will be used unmodified.
    "foam.openDailyNote.fileExtension": "md",
    "foam.openDailyNote.titleFormat": "yyyy-mm-dd",
    "foam.openDailyNote.onStartup": true,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false
    "workbench.statusBar.visible": false,
    "window.zoomLevel": 1,
    "go.toolsManagement.autoUpdate": true,
}
